@font-face
  font-family 'Compact'
  src url(/font/Compact.otf)

body
  margin 0
  font-family 'Compact'

input-margin = 1.6vw
input-padding = 0 2vw
input-height = 9.8vw
input-border = 1px solid hsl(0, 0%, 90%)
input-radius = 1.4vw

form
  padding 3vw 2vw

.labels
  margin input-margin
  display flex
  label
    width 50%
    height input-height
    line-height @height
    display inline-block
    input
      display none
    span
      border input-border
      height @height
      color hsl(0, 0%, 35%)
      font-size 14px
      text-align center
      box-sizing border-box
      display block
    input:checked + span
      border none
      background hsl(210, 35%, 70%)
      color hsl(0, 0%, 95%)
    &:first-child span
      border-top-left-radius input-radius
      border-bottom-left-radius input-radius
    &:last-child span
      border-top-right-radius input-radius
      border-bottom-right-radius input-radius

.text
  margin input-margin
  margin-top 5vw
  display block
  input
    margin 0
    padding input-padding
    width 100%
    height input-height
    line-height @height
    border input-border
    border-radius input-radius
    -webkit-appearance none
    color hsl(0, 0%, 35%)
    box-sizing border-box
    display block

.file
  margin input-margin
  padding 0
  height input-height
  line-height @height
  border input-border
  border-radius input-radius
  font-size 12px
  color hsl(0, 0%, 50%)
  text-align center
  display block
  &::before
    content 'IMAGE'
  input
    display none

.help
  padding 3vw 0
  font-size 11px
  color hsl(0, 0%, 70%)
  text-align center

.result
  padding-top 1vw
  text-align center
  img
    display none